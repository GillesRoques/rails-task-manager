

<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<br>

<%= link_to "Edit #{@task.title}",
            edit_task_path(@task) %>

<br>


<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<br>

<%= link_to "Go back ",
            menu_task_path(@task) %>

<br>
